#!/bin/bash

if [ -z "$(git status --porcelain)" ]; then
	echo "No changes to commit."
	echo "Checked for changes at $(date)" >> "./logs/$(date +'%m-%d-%Y')".txt
	# git add .
	# git commit -m "Log modification before proper update"
else
	git add .
	git commit -m "Modifications for $(date +'%m-%d-%Y')"
	var=$(git push origin)
	echo $var
	# echo "$(git push origin)" >> "./logs/$(date +'%m-%d-%Y')".txt

fi
